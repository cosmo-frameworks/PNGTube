{
  "name": "pngtuber-app",
  "version": "1.0.0",
  "description": "PNGTuber avatar for OBS with mic detection",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "pkg . --targets node18-win-x64 --output dist/PNGTuber.exe",
    "build:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist"
  },
  "pkg": {
    "assets": [
      "panel.html",
      "overlay.html",
      "public/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.2.1",
    "obs-websocket-js": "^5.0.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
